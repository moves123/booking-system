<Window x:Class="Software.CustomerDashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Software"
        mc:Ignorable="d"
        Title="CustomerDashboard" Height="450" Width="714.385" WindowStartupLocation="CenterScreen" WindowState="Normal">
    <Grid Background="#85953C">
        <Button Background="#FFFFFF" x:Name="BtnEditAccountDetails" Content= "                    Edit Account Details" HorizontalAlignment="Left" Margin="344,276,0,0" VerticalAlignment="Top" Width="206" Height="48" Click="BtnEditAccountDetails_Click"/>
